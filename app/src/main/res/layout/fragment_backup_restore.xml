<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 提示信息 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="所有数据将打包为通用的 .eyf (Errorsia Yusulif Format) 格式文件，包含您的日程、分类以及相关的高清图片素材。"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- ============================== -->
            <!-- 导出卡片 (Export)             -->
            <!-- ============================== -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="导出数据"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- 导出选项：设置 -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_export_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="应用配置 (主题、开屏、导航栏等)" />

                    <!-- 导出选项：日程本 -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_export_books"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:checked="true"
                        android:text="日程集 (所有分组)" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="32dp">
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_export_book_colors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="包含：标识颜色" />
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_export_book_covers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="包含：高清封面图" />
                    </LinearLayout>

                    <!-- 导出选项：日程 -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_export_events"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:checked="true"
                        android:text="倒数日卡片 (所有日程项)" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="32dp">
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_export_event_colors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="包含：卡片个性化颜色" />
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_export_event_covers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="包含：卡片专属背景图" />
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_export_event_alphas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="包含：透明度等显示设置" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_export"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="生成 .eyf 并保存" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ============================== -->
            <!-- 导入卡片 (Import)             -->
            <!-- ============================== -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="导入数据"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="?attr/colorOutlineVariant" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="请选择您想从备份包中恢复哪些数据。导入操作不会删除您现有手机上的数据，而是追加（如遇重名可能重复）。"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorError" />

                    <!-- 导入选项：设置 -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_import_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="覆盖应用配置" />

                    <!-- 导入选项：日程本 -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_import_books"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:checked="true"
                        android:text="追加日程集" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="32dp">
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_import_book_colors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="恢复标识颜色" />
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_import_book_covers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="恢复封面图" />
                    </LinearLayout>

                    <!-- 导入选项：日程 -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_import_events"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:checked="true"
                        android:text="追加倒数日卡片" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="32dp">
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_import_event_colors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="恢复个性化颜色" />
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_import_event_covers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="恢复背景图" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_import"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="选择 .eyf 文件并导入" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 全局加载遮罩 (阻断操作) -->
    <FrameLayout
        android:id="@+id/fl_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:indicatorColor="?attr/colorPrimary"/>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>