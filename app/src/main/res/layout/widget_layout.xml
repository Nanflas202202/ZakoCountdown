<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_transparent"
    android:padding="16dp">

    <TextView
        android:id="@+id/widget_title_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="距离"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widget_title_prefix"
        android:layout_alignBaseline="@id/widget_title_prefix"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="毕业典礼"/>

    <TextView
        android:id="@+id/widget_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:text="123" />

    <TextView
        android:id="@+id/widget_days_suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/widget_days"
        android:layout_toEndOf="@id/widget_days"
        android:layout_marginStart="8dp"
        android:text="天"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>