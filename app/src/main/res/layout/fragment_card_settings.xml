<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 1. 显示模式 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示模式"
            android:textAppearance="?attr/textAppearanceTitleMedium"/>

        <RadioGroup
            android:id="@+id/radio_group_display_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <RadioButton
                android:id="@+id/radio_simple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简洁模式 (只显示天数)"/>
            <RadioButton
                android:id="@+id/radio_detailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细模式 (天:时:分:秒)"/>
            <RadioButton
                android:id="@+id/radio_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完整模式 (年:月:周:天...)"/>
        </RadioGroup>

        <!-- 2. 自定义颜色 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义颜色"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="24dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:id="@+id/color_palette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </HorizontalScrollView>

        <!-- 3. 壁纸设置 (仅置顶卡片显示) -->
        <LinearLayout
            android:id="@+id/wallpaper_settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义背景 (仅置顶卡片)"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- 使用动态样式 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_change_wallpaper"
                    style="?attr/materialButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择图片"/>

                <!-- 使用动态无边框样式 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_remove_wallpaper"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="移除图片"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 4. 透明度设置 -->
        <TextView
            android:id="@+id/text_alpha_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡片不透明度"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.0"
            android:valueTo="1.0"
            android:stepSize="0.05"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>
</ScrollView>