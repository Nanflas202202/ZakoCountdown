<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/text_view_prefix_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_view_prefix_title"
            app:layout_constraintTop_toTopOf="@id/text_view_prefix_title"
            app:layout_constraintBottom_toBottomOf="@id/text_view_prefix_title"
            tools:text="世界第一可爱的时雨初风的生日"/>

        <TextView
            android:id="@+id/text_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            app:layout_constraintTop_toBottomOf="@id/text_view_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_view_days"
            app:layout_constraintHorizontal_chainStyle="packed"
            tools:text="还有"/>

        <TextView
            android:id="@+id/text_view_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/text_view_label"
            app:layout_constraintStart_toEndOf="@id/text_view_label"
            app:layout_constraintEnd_toStartOf="@id/text_view_days_suffix"
            tools:text="123"/>

        <TextView
            android:id="@+id/text_view_days_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            app:layout_constraintBaseline_toBaselineOf="@id/text_view_label"
            app:layout_constraintStart_toEndOf="@id/text_view_days"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>