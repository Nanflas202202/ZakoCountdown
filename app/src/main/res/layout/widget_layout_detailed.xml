<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widget_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/widget_background_base" />

    <ImageView
        android:id="@+id/widget_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_background_base"
        android:visibility="gone" />

    <!-- 内容区域：整体居中 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 标题：增加顶部边距实现下沉视觉 -->
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="日程标题"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- 核心数据行：增加间距 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/widget_detailed_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已过"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="4dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <TextView
                android:id="@+id/widget_detailed_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                tools:text="42" />

            <TextView
                android:id="@+id/widget_detailed_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="4dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <TextView
                android:id="@+id/widget_detailed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                tools:text="17时 43分" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>