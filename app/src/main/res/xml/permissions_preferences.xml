<!-- file: res/xml/permissions_preferences.xml (终极修复版) -->
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="基础权限">
        <Preference
            app:key="permission_notification"
            app:title="通知权限"
            app:summary="允许应用发送常驻通知和定时提醒"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="后台与提醒">
        <Preference
            app:key="permission_exact_alarm"
            app:title="精确闹钟权限"
            app:summary="[推荐] 允许应用精确提醒和刷新"/>
        <Preference
            app:key="permission_battery_optimization"
            app:title="电池优化豁免"
            app:summary="[推荐] 防止后台任务被系统终止"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="高级功能权限">
        <!-- 【修复】移除 <intent> 标签 -->
        <Preference
            app:key="enable_accessibility"
            app:title="无障碍服务 (用于开屏弹窗)"
            app:summary="[必要] 点击开启"/>
        <Preference
            app:key="permission_overlay"
            app:title="悬浮窗权限"
            app:summary="[推荐] 在定制系统上确保弹窗正常"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="系统特定权限 (国产ROM)">
        <Preference
            app:key="permission_autostart"
            app:title="自启动权限"
            app:summary="确保手机重启后能恢复服务"/>
        <Preference
            app:key="permission_miui_background"
            app:title="后台弹出界面 (小米/HyperOS)"
            app:summary="开屏弹窗功能的核心权限"
            app:isPreferenceVisible="false"/>
    </PreferenceCategory>
</PreferenceScreen>