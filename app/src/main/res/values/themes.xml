<!-- file: app/src/main/res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ============================================= -->
    <!-- =====   1. 组件样式定义 (Button/Switch) ====== -->
    <!-- ============================================= -->

    <!-- MD1 按钮: 直角，高阴影 -->
    <style name="Widget.Zako.Button.MD1" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">2dp</item>
        <item name="elevation">4dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- MD1 开关: 经典样式 -->
    <style name="Widget.Zako.Switch.MD1" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">?attr/colorAccent</item>
        <item name="trackTint">?attr/colorAccent</item>
    </style>

    <!-- MD2 按钮: 4dp圆角 -->
    <style name="Widget.Zako.Button.MD2" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="elevation">2dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>
    <!-- MD2 开关 -->
    <style name="Widget.Zako.Switch.MD2" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">?attr/colorAccent</item>
        <item name="trackTint">?attr/colorAccent</item>
    </style>

    <!-- MD2 Toolbar 专用：白色背景，深色文字 (修复报错) -->
    <style name="Widget.ZakoCountdown.Toolbar.MD2.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
        <item name="actionMenuTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.ZakoCountdown.CardView.MD1" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="Widget.ZakoCountdown.CardView.MD2" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.ZakoCountdown.Toolbar.MD1" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="subtitleTextColor">#FFFFFF</item>
        <item name="navigationIconTint">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>

    <!-- ============================================= -->
    <!-- =====   2. 基础骨架 (绑定组件样式)      ====== -->
    <!-- ============================================= -->

    <!-- MD1 Base -->
    <style name="Theme_ZakoCountdown_Base_MD1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialButtonStyle">@style/Widget.Zako.Button.MD1</item>
        <item name="switchStyle">@style/Widget.Zako.Switch.MD1</item>
        <item name="radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
        <item name="checkboxStyle">@style/Widget.AppCompat.CompoundButton.CheckBox</item>

        <item name="materialCardViewStyle">@style/Widget.ZakoCountdown.CardView.MD1</item>
        <item name="toolbarStyle">@style/Widget.ZakoCountdown.Toolbar.MD1</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="navigationViewStyle">@style/Widget.MaterialComponents.NavigationView</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <!-- MD2 Base -->
    <style name="Theme_ZakoCountdown_Base_MD2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialButtonStyle">@style/Widget.Zako.Button.MD2</item>
        <item name="switchStyle">@style/Widget.Zako.Switch.MD2</item>

        <item name="materialCardViewStyle">@style/Widget.ZakoCountdown.CardView.MD2</item>
        <item name="toolbarStyle">@style/Widget.ZakoCountdown.Toolbar.MD2.Surface</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- MD3 Base -->
    <style name="Theme_ZakoCountdown_Base_M3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar.Surface</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- ============================================= -->
    <!-- =====   3. 成品主题 (配色强制统一)      ====== -->
    <!-- ============================================= -->

    <!-- MD1: 强制 Accent = Primary -->
    <style name="Theme_ZakoCountdown_MD1" parent="Theme_ZakoCountdown_Base_MD1">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#3F51B5</item> <!-- 统一 -->
        <item name="colorControlActivated">#3F51B5</item> <!-- 统一开关颜色 -->
        <item name="colorSecondary">#3F51B5</item>
        <item name="android:statusBarColor">#303F9F</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <style name="Theme_ZakoCountdown_MD1_Pink" parent="Theme_ZakoCountdown_Base_MD1">
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#C2185B</item>
        <item name="colorAccent">#E91E63</item>
        <item name="colorControlActivated">#E91E63</item>
        <item name="colorSecondary">#E91E63</item>
        <item name="android:statusBarColor">#C2185B</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <style name="Theme_ZakoCountdown_MD1_Blue" parent="Theme_ZakoCountdown_Base_MD1">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#2196F3</item>
        <item name="colorControlActivated">#2196F3</item>
        <item name="colorSecondary">#2196F3</item>
        <item name="android:statusBarColor">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <!-- MD2: 白色标题栏，强调色统一 -->
    <style name="Theme_ZakoCountdown_MD2" parent="Theme_ZakoCountdown_Base_MD2">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorAccent">#6200EE</item>
        <item name="colorControlActivated">#6200EE</item>
        <item name="colorSecondary">#6200EE</item>
        <item name="android:statusBarColor">#F5F5F5</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme_ZakoCountdown_MD2_Pink" parent="Theme_ZakoCountdown_Base_MD2">
        <item name="colorPrimary">#D81B60</item>
        <item name="colorPrimaryVariant">#AD1457</item>
        <item name="colorAccent">#D81B60</item>
        <item name="colorControlActivated">#D81B60</item>
        <item name="colorSecondary">#D81B60</item>
        <item name="android:statusBarColor">#F5F5F5</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme_ZakoCountdown_MD2_Blue" parent="Theme_ZakoCountdown_Base_MD2">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryVariant">#0D47A1</item>
        <item name="colorAccent">#1976D2</item>
        <item name="colorControlActivated">#1976D2</item>
        <item name="colorSecondary">#1976D2</item>
        <item name="android:statusBarColor">#F5F5F5</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- MD3: 定义完整的 Color Container，解决底部栏紫色问题 -->
    <style name="Theme_ZakoCountdown_M3" parent="Theme_ZakoCountdown_Base_M3" />

    <style name="Theme_ZakoCountdown_M3_Pink" parent="Theme_ZakoCountdown_Base_M3">
        <item name="colorPrimary">#B93E6D</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#FFD9E2</item>
        <item name="colorOnPrimaryContainer">#3E0021</item>
        <item name="colorSecondary">#B93E6D</item>
        <item name="colorSecondaryContainer">#FFD9E2</item> <!-- 底部栏选中背景 -->
        <item name="colorOnSecondaryContainer">#3E0021</item> <!-- 底部栏选中图标色 -->
    </style>

    <style name="Theme_ZakoCountdown_M3_Blue" parent="Theme_ZakoCountdown_Base_M3">
        <item name="colorPrimary">#0061A4</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#D1E4FF</item>
        <item name="colorOnPrimaryContainer">#001D36</item>
        <item name="colorSecondary">#0061A4</item>
        <item name="colorSecondaryContainer">#D1E4FF</item> <!-- 底部栏选中背景 -->
        <item name="colorOnSecondaryContainer">#001D36</item> <!-- 底部栏选中图标色 -->
    </style>

    <!-- Overlay 仅用于动态叠加 -->
    <style name="Theme_ZakoCountdown_Overlay_Pink">
        <item name="colorPrimary">#B93E6D</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#FFD9E2</item>
        <item name="colorOnPrimaryContainer">#3E0021</item>
        <item name="colorSecondaryContainer">#FFD9E2</item>
    </style>

    <style name="Theme_ZakoCountdown_Overlay_Blue">
        <item name="colorPrimary">#0061A4</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#D1E4FF</item>
        <item name="colorOnPrimaryContainer">#001D36</item>
        <item name="colorSecondaryContainer">#D1E4FF</item>
    </style>

    <style name="Theme.ZakoCountdown" parent="Theme_ZakoCountdown_M3" />

    <style name="Theme.ZakoCountdown.Popup" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- ============================================= -->
    <!-- =====   右侧抽屉容器及头部基础样式      ====== -->
    <!-- ============================================= -->

    <!-- 1. 抽屉容器基类 -->
    <style name="Widget.Zako.RightDrawer" parent="">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- 2. 抽屉头部基类 (解决报错) -->
    <style name="Widget.Zako.RightHeader" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- MD3 抽屉容器变体: 悬浮、左侧圆角 -->
    <style name="Widget.Zako.RightDrawer.M3" parent="Widget.Zako.RightDrawer">
        <item name="android:background">@drawable/bg_drawer_right_m3</item>
    </style>

    <!-- MD1/2 抽屉容器变体: 贴边、直角 -->
    <style name="Widget.Zako.RightDrawer.Legacy" parent="Widget.Zako.RightDrawer">
        <item name="android:background">?attr/colorSurface</item>
    </style>
</resources>