    <!-- MD3 Theme Variants -->
    <style name="Theme_ZakoCountdown_M3" parent="Theme_ZakoCountdown_Base_M3" />
    <style name="Theme_ZakoCountdown_M3_Pink" parent="Theme_ZakoCountdown_Base_M3">
        <item name="colorPrimary">#B93E6D</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#FFD9E2</item>
        <item name="colorOnPrimaryContainer">#3E0021</item>
