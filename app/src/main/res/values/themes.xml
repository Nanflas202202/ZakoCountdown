<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ============================================= -->
    <!-- =====   1. 组件样式定义 (Button 强制着色)   === -->
    <!-- ============================================= -->

    <!-- MD1 按钮: 直角，高阴影，强制使用 Primary 色 -->
    <style name="Widget.Zako.Button.MD1" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">2dp</item>
        <item name="elevation">4dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- MD2 按钮: 4dp圆角，强制使用 Primary 色 -->
    <style name="Widget.Zako.Button.MD2" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="elevation">2dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- MD3 按钮: 保持默认，跟随动态色 -->
    <style name="Widget.Zako.Button.M3" parent="Widget.Material3.Button" />

    <!-- MD1 开关 -->
    <style name="Widget.Zako.Switch.MD1" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_tint</item>
        <item name="trackTint">@color/switch_track_tint</item>
    </style>

    <!-- MD2 开关 -->
    <style name="Widget.Zako.Switch.MD2" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_tint</item>
        <item name="trackTint">@color/switch_track_tint</item>
    </style>
    <!-- ... (CardView, Toolbar 样式保持不变) ... -->
    <style name="Widget.ZakoCountdown.CardView.MD1" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">6dp</item>
    </style>
    <style name="Widget.ZakoCountdown.CardView.MD2" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    <style name="Widget.ZakoCountdown.Toolbar.MD1" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="subtitleTextColor">#FFFFFF</item>
        <item name="navigationIconTint">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>
    <style name="Widget.ZakoCountdown.Toolbar.MD2.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
        <item name="actionMenuTextColor">?attr/colorOnSurface</item>
    </style>

    <!-- ============================================= -->
    <!-- =====   3. 基础骨架 (绑定组件样式)      ====== -->
    <!-- ============================================= -->

    <!-- MD1 Base -->
    <style name="Theme_ZakoCountdown_Base_MD1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialButtonStyle">@style/Widget.Zako.Button.MD1</item>
        <item name="switchStyle">@style/Widget.Zako.Switch.MD1</item>
        <!-- 其他组件使用 AppCompat 默认 -->

        <item name="materialCardViewStyle">@style/Widget.ZakoCountdown.CardView.MD1</item>
        <item name="toolbarStyle">@style/Widget.ZakoCountdown.Toolbar.MD1</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="navigationViewStyle">@style/Widget.MaterialComponents.NavigationView</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <!-- MD2 Base -->
    <style name="Theme_ZakoCountdown_Base_MD2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialButtonStyle">@style/Widget.Zako.Button.MD2</item>
        <item name="switchStyle">@style/Widget.Zako.Switch.MD2</item>

        <item name="materialCardViewStyle">@style/Widget.ZakoCountdown.CardView.MD2</item>
        <item name="toolbarStyle">@style/Widget.ZakoCountdown.Toolbar.MD2.Surface</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- MD3 Base -->
    <style name="Theme_ZakoCountdown_Base_M3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar.Surface</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- ============================================= -->
    <!-- =====   4. 成品主题 (Color Palette)     ====== -->
